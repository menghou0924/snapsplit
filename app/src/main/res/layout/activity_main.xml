<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:visibility="visible"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="com.rnd.snapsplit.FdList" >

    <include layout="@layout/tool_bar_process" />

    <RelativeLayout
        android:id="@+id/relative_summary"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:background="@drawable/black_border"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/receipt_icon"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/text_summary_shop"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:paddingStart="12dp"
            android:paddingTop="18dp"
            android:text="@string/shop_name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/text_summary_amount"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/text_selected_friends"
            android:paddingStart="12dp"
            android:text="@string/total_amount"
            android:textColor="#696969" />

        <TextView
            android:id="@+id/text_selected_friends"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/text_summary_shop"
            android:layout_alignBottom="@+id/text_summary_shop"
            android:layout_toEndOf="@+id/text_summary_shop"
            android:paddingTop="18dp"
            android:text="@string/selected_friends"
            android:textColor="@color/colorAccent2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_selected_friends_no"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/text_selected_friends"
            android:layout_alignBottom="@+id/text_selected_friends"
            android:layout_toEndOf="@+id/text_selected_friends"
            android:paddingTop="18dp"
            android:text="0"
            android:textColor="@color/colorAccent2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_each"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/text_summary_amount"
            android:text="@string/each"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_each_price"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_selected_friends"
            android:layout_toEndOf="@+id/text_each"
            android:text="HKD0.00"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent2"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_search"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/relative_summary"
        android:layout_below="@+id/relative_summary"
        android:background="@color/colorBackground"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="visible">
        <ListView
            android:id="@+id/android:list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>
</RelativeLayout>