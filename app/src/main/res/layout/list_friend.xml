<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fd_list_shadow2"
    android:foreground="?android:attr/selectableItemBackground"
    android:alpha="0.98"
    android:layout_marginTop="0dp"
    android:orientation="horizontal"
    android:padding="3dip" >

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/text_icon"
        android:layout_width="@dimen/list_item_avatar_size"
        android:layout_height="@dimen/list_item_avatar_size"
        android:layout_margin="15dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/damian" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="Dutkiewicz"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:paddingTop="1dp"
            android:text="5660 0981"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/splitAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_phone"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:textAlignment="viewStart"
            android:textColor="#27ae60"
            android:textSize="14sp"
            android:visibility="invisible"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/currencyOrPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/splitAmount"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/splitAmount"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:text="HKD"
            android:textAlignment="viewStart"
            android:textColor="#27ae60"
            android:textSize="14sp"
            android:visibility="invisible"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/fdTick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/tick_black" />

    </RelativeLayout>
</RelativeLayout>
