<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_border"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="30dp"
    android:orientation="horizontal"
    android:padding="10dip" >

        <ImageView
            android:id="@+id/friendIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/damian" />

        <TextView
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:paddingBottom="0dip"
            android:paddingRight="9dip"
            android:text="Damian"
            android:textSize="20dip"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignTop="@+id/friendIcon"
            android:layout_toEndOf="@+id/friendIcon" />

        <TextView
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:paddingBottom="0dip"
            android:text="Dutkiewicz"
            android:textSize="20dip"
            android:textColor="#000000"
            android:layout_alignTop="@+id/friendIcon"
            android:layout_toEndOf="@+id/firstName" />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:paddingTop="1dp"
            android:text="5660 0981"
            android:textSize="20dip"
            android:layout_below="@+id/firstName"
            android:layout_toEndOf="@+id/friendIcon" />

        <TextView
            android:id="@+id/splitAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginLeft="20dip"
            android:layout_toEndOf="@+id/friendIcon"
            android:paddingTop="1dp"
            android:text="100"
            android:textColor="#27ae60"
            android:textSize="20dip"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/fdTick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/tick_black" />
</RelativeLayout>
