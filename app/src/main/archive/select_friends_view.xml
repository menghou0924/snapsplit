<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:visibility="visible"
    android:focusableInTouchMode="true"
    android:focusable="true" >

    <RelativeLayout
        android:id="@+id/relative_summary"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:background="@drawable/black_border"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/receipt_icon" />

        <TextView
            android:id="@+id/text_summary_shop"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:paddingStart="20dp"
            android:paddingTop="18dp"
            android:text="@string/shop_name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/text_summary_amount"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/text_selected_friends"
            android:paddingStart="20dp"
            android:text="@string/total_amount"
            android:textColor="#696969" />

        <TextView
            android:id="@+id/text_selected_friends"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/text_summary_shop"
            android:layout_alignBottom="@+id/text_summary_shop"
            android:layout_toEndOf="@+id/text_summary_shop"
            android:paddingTop="18dp"
            android:text="@string/selected_friends"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_selected_friends_no"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/text_selected_friends"
            android:layout_alignBottom="@+id/text_selected_friends"
            android:layout_alignParentEnd="true"
            android:paddingTop="18dp"
            android:text="@string/selected_friends_no"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_each"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/text_summary_amount"
            android:text="@string/each"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_each_price"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_selected_friends"
            android:text="@string/each_price"
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_search"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/relative_summary"
        android:layout_below="@+id/relative_summary"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/editText_search_bar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_input_search"
            android:layout_marginTop="13dp"
            android:background="@drawable/black_border"
            android:hint="@string/search"
            android:inputType="none" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/relative_search"
        android:layout_below="@+id/relative_search"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/relative_frequently_used">

        <TextView
            android:id="@+id/text_frequently_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frequently_used"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_straight_line_1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:text="@string/frequently_used" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_frequent_friends"
        android:layout_width="350dp"
        android:layout_height="210dp"
        android:background="@drawable/black_border"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/relative_frequently_used"
        android:layout_alignStart="@+id/relative_frequently_used">


        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/damian"
            android:id="@+id/radio_1"
            android:scaleX="0.7"
            android:scaleY="0.7"
            />

        <TextView
            android:id="@+id/text_friend_1_name"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:text="@string/friend_name_1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/radio_1" />

        <TextView
            android:id="@+id/text_friend_1_phone"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:text="@string/phone_number_1"
            android:textColor="#696969"
            android:layout_below="@+id/text_friend_1_name"
            android:layout_alignStart="@+id/text_friend_1_name" />

        <TextView
            android:id="@+id/text_friend_1_split"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="26dp"
            android:text="@string/split_1"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/receipt_icon"
            android:id="@+id/radio_2"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_below="@+id/radio_1"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_friend_2_name"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:text="@string/friend_name_2"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/text_friend_1_phone"
            android:layout_toEndOf="@+id/radio_1" />

        <TextView
            android:id="@+id/text_friend_2_phone"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:text="@string/phone_number_2"
            android:textColor="#696969"
            android:layout_below="@+id/text_friend_2_name"
            android:layout_toEndOf="@+id/radio_2" />

        <TextView
            android:id="@+id/text_friend_2_split"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_friend_1_split"
            android:text="@string/split_2"
            android:paddingTop="26dp"
            android:textColor="@color/colorAccent" />

        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/receipt_icon"
            android:id="@+id/radio_3"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_friend_3_name"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingTop="15dp"
            android:paddingStart="20dp"
            android:text="@string/friend_name_3"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/text_friend_2_split"
            android:layout_toEndOf="@+id/radio_3" />

        <TextView
            android:id="@+id/text_friend_3_phone"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:text="@string/phone_number_3"
            android:textColor="#696969"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/radio_3" />

        <TextView
            android:id="@+id/text_friend_3_split"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="26dp"
            android:text="@string/split_3"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_others"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/relative_frequent_friends"
        android:layout_alignStart="@+id/relative_frequent_friends">

        <TextView
            android:id="@+id/text_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/others"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_straight_line_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:text="@string/frequently_used" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_other_friends"
        android:layout_width="350dp"
        android:layout_height="210dp"
        android:background="@drawable/black_border"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relative_others"
        android:layout_alignStart="@+id/relative_others">


        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/receipt_icon"
            android:id="@+id/radio_4"
            android:scaleX="0.7"
            android:scaleY="0.7"
            />

        <TextView
            android:id="@+id/text_friend_4_name"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:text="@string/friend_name_4"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/radio_4" />

        <TextView
            android:id="@+id/text_friend_4_phone"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:text="@string/phone_number_4"
            android:textColor="#696969"
            android:layout_below="@+id/text_friend_4_name"
            android:layout_alignStart="@+id/text_friend_4_name" />

        <TextView
            android:id="@+id/text_friend_4_split"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:paddingTop="26dp"
            android:text="@string/split_4"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/receipt_icon"
            android:id="@+id/radio_5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_below="@+id/radio_4"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_friend_5_name"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:text="@string/friend_name_5"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/text_friend_4_phone"
            android:layout_toEndOf="@+id/radio_4" />

        <TextView
            android:id="@+id/text_friend_5_phone"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:text="@string/phone_number_5"
            android:textColor="#696969"
            android:layout_below="@+id/text_friend_5_name"
            android:layout_toEndOf="@+id/radio_5" />

        <TextView
            android:id="@+id/text_friend_5_split"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_friend_4_split"
            android:paddingTop="26dp"
            android:textColor="@color/colorAccent" />

        <RadioButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/receipt_icon"
            android:id="@+id/radio_6"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_friend_6_name"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingTop="15dp"
            android:paddingStart="20dp"
            android:text="@string/friend_name_6"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_below="@+id/text_friend_5_split"
            android:layout_toEndOf="@+id/radio_6" />

        <TextView
            android:id="@+id/text_friend_6_phone"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:text="@string/phone_number_6"
            android:textColor="#696969"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/radio_6" />

        <TextView
            android:id="@+id/text_friend_6_split"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="26dp"
            android:text="@string/split_6"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</RelativeLayout>